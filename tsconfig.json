{
  "compilerOptions": {
    "types": ["node", "jest"],
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es6",
    "allowJs": true,
    "strict": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "./dist/types",
    "outDir": "./dist",
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./src/lib"]
}
